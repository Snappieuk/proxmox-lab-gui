[Unit]
Description=Proxmox Lab GUI
After=network.target

[Service]
Type=exec
User=root
Group=root
WorkingDirectory=/root/proxmox-lab-gui/rdp-gen
Environment="PATH=/root/proxmox-lab-gui/venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=-/root/proxmox-lab-gui/.env
ExecStart=/root/proxmox-lab-gui/venv/bin/gunicorn -w 4 -b 0.0.0.0:8080 app:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
